<!DOCTYPE html>
<html>
<head>
  <title>My Form</title>
</head>
<body>

<% articles.forEach(article => { %>
    <form action="/author/edit-article/<%=article.id%>" method="POST">
        <label for="title">Title</label>
        <input type="text" name="title"  value="<%= article.title %>" >
    
        <label for="subtitle">Subtitle</label>
        <input type="text" name="subtitle"  value="<%= article.subtitle %>" >
    
        <label for="body">Body</label>
        <textarea name="body" rows="5" cols="40"><%= article.body %></textarea><br>
        <button type="submit">Update</button>
    </form>

    <div class="info">
      <p>Created: <%=article.date_created %> </p>
      <p>Last modified: <%=article.last_modified %></p>
      <p>Status: Draft</p>
    </div>
<% }) %>

<a href="/author">Back</a>
</body>
</html>
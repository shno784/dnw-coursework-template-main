<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CM2040 Template</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/author-home-page.css">
    
</head>
<body>

    <div class="container mt-5">
        <!-- Move the "Settings" link to the top-right side -->
        <div class="d-flex justify-content-end">
          <a href="author/settings" class="btn btn-primary mt-3">Settings</a>
        </div>

        <!-- Logout button aligned to the top-left corner -->
        <form action="/user/logout" method="get">
          <button type="submit" class="btn btn-secondary logout-button">Logout</button>
        </form>
    
        <h1>Author Home Page</h1>
        <% if (blogs.length === 0) { %>
          <h2 class="mt-3">Add Blog info from settings</h2>
        <% } else { %>
          <% blogs.forEach(blog => { %>
            <h1 class="mt-3 center-text"><%= blog.title %></h1>
            <h2 class="mb-2 text-muted center-text"><%= blog.subtitle %></h2>
            <h4 class="center-text"><%= blog.blog_username %></h4>
          <% }) %>
        <% } %>
    
        <h1 class="mt-5">Draft Articles</h1>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Date Created</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (articles.length === 0) { %>
                <!-- You can add a message here for no articles if needed -->
              <% } else { %>
                <% articles.forEach(article => { %>
                  <% if (article.published == 0) { %>
                    <tr>
                      <td><%= article.title %></td>
                      <td><%= article.subtitle %></td>
                      <td><%= article.date_created %></td>
                      <td>
                        <form action="/author/edit-article/<%= article.id %>" method="get">
                          <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                        </form>
                        <form action="/author/delete-article/<%= article.id %>" method="post">
                          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        <form action="/author/publish-article/<%= article.id %>" method="post">
                          <button id="publish-article" type="submit" class="btn btn-success btn-sm" onclick="return publish()">Publish</button>
                        </form>
                      </td>
                    </tr>
                  <% } %>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
    
        <h1 class="mt-5">Published Articles</h1>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Date Created</th>
                <th>Last Modified</th>
                <th>Published</th>
                <th>likes</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (articles.length === 0) { %>
                <!-- You can add a message here for no published articles if needed -->
              <% } else { %>
                <% articles.forEach(article => { %>
                  <% if (article.published == 1) { %>
                    <tr>
                      <td><%= article.title %></td>
                      <td><%= article.subtitle %></td>
                      <td><%= article.date_created %></td>
                      <td><%= article.last_modified %></td>
                      <td><%= article.publication_date %></td>
                      <td><%= article.like_number %></td>
                      <td>
                        <form action="/author/edit-article/<%= article.id %>" method="get">
                          <button type="submit" class="btn btn-success btn-sm">Edit</button>
                        </form>
                        <button onclick="shareLink(<%= article.id %>)" class="btn btn-primary btn-sm">Share</button>
                        <form action="/author/delete-article/<%= article.id %>" method="post">
                          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                      </td>
                    </tr>
                  <% } %>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
    
        <form action="/author/create-article" method="get">
          <button type="submit" class="btn btn-primary mt-5">Create new draft</button>
        </form>
      </div>
      
</body>
</html>


<script>
    //Returns link to share to the user
    function shareLink(id) {
        alert(`localhost:3000/reader/article/${id}`)
    };
    //Shows popup for when user hits publish
    function publish() {
      if(confirm('Are you sure you want to publish?')) {
        //If the user clicks OK
        document.getElementById('publish-article').submit();
        return true;
      } else {
        return false;
      }
    };
</script>
